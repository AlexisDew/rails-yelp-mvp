<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Rating</th>
      <th>Restaurant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.content %></td>
        <td><%= review.rating %></td>
        <td><%= review.restaurant.name %></td>
        <td><%= link_to 'Show', restaurant_review_path(review, restaurant_id: @restaurant.id) %></td>
        <td><%= link_to 'Edit', edit_restaurant_review_path(review, restaurant_id: @restaurant.id) %></td>
        <td><%= link_to 'Destroy', restaurant_review_path(review, restaurant_id: @restaurant.id, method: :delete, data: { confirm: 'Are you sure?' }) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_restaurant_review_path(restaurant_id: @restaurant.id) %>
